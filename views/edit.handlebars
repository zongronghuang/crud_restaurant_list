<div class="card-body w-50 mx-auto bg-light">

  <h1 class="text-center mb-5">編輯餐廳基本資料</h1>

  <form action="/restaurants/{{{restaurant._id}}}/edit" method="POST">
    <div class="form-group">
      <label for="name">名稱*</label>
      <input type="text" id="name" name="name" value="{{{restaurant.name}}}" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="name_en">英文名稱</label>
      <input type="text" id="name_en" name="name_en" value="{{{restaurant.name_en}}}" class="form-control">
    </div>

    <div class="form-group">
      <label for="category">類別* (例如：義式餐廳、酒吧、日本料理)</label>
      <input type="text" id="category" name="category" value="{{{restaurant.category}}}" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="image">圖片網址*</label>
      <input type="url" id="image" name="image" value="{{{restaurant.image}}}" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="location">地址</label>
      <input type="text" id="location" name="location" value="{{{restaurant.location}}}" class="form-control">
    </div>

    <div class="form-group">
      <label for="phone">電話</label>
      <input type="tel" id="phone" name="phone" value="{{{restaurant.phone}}}" class="form-control">
    </div>

    <div class="form-group">
      <label for="google_map">Google Map 連結</label>
      <input type="url" id="google_map" name="google_map" value="{{{restaurant.google_map}}}" class="form-control">
    </div>

    <div class="form-group">
      <label for="rating">評分* (0 至 5 分)</label>
      <input type="number" id="rating" name="rating" value="{{{restaurant.rating}}}" max="5" min="0" step="0.1"
        class="form-control" required>
    </div>

    <div class="form-group">
      <label for="description">餐廳描述</label>
      <br>
      <textarea class="w-100 rounded" id="description" name="description"
        rows="4">{{{restaurant.description}}}</textarea>
    </div>

    <div class="d-flex justify-content-end">
      <button type="reset" class="btn btn-danger mr-2">清空</button>
      <button type="submit" class="btn btn-primary">確定</button>
    </div>
  </form>

</div>